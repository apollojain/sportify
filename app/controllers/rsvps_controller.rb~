class RsvpsController < ApplicationController
  def create
    @game = Game.find(params[:game_id])
    @rsvp = @game.comments.create(rsvp_params)
    @rsvp.user = current_user
    @rsvp.save
    redirect_to game_path(@game)
  end
 
  private
    def rsvp_params
      params.require(:rsvp).permit()
    end
end
